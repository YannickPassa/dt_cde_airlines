# Updated for Airflow 3.x
AIRFLOW__API__AUTH_BACKENDS="airflow.api.auth.backend.basic_auth,airflow.api.auth.backend.session"
AIRFLOW__CORE__DEFAULT_POOL_TASK_SLOT_COUNT=24
AIRFLOW__CORE__DEFAULT_TIMEZONE=Europe/Paris
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__PARALLELISM=6
AIRFLOW__DATABASE__LOAD_DEFAULT_CONNECTIONS=False

# Airflow 3.x changes
AIRFLOW__SCHEDULER__CATCHUP_BY_DEFAULT=False
AIRFLOW__WEBSERVER__ENABLE_PROXY_FIX=True

SQLALCHEMY_SILENCE_UBER_WARNING=1
AIRFLOW__CORE__DAGS_FOLDER=dags

AIRFLOW_HOME="/tmp/airflow"
DBT_LOG_PATH=".dbt/logs"
DBT_TARGET_PATH=".dbt/target"

AIRFLOW_BASE_DIR="."
PYTHONPATH="${PYTHONPATH}:."